{
  "name": "playwright-pdf-reporter",
  "version": "0.1.0",
  "description": "Playwright reporter that turns rich HTML summaries into polished PDF reports.",
  "author": "Playwright PDF Reporter Authors",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "examples"
  ],
  "keywords": [
    "playwright",
    "reporter",
    "pdf",
    "testing",
    "automation",
    "ci"
  ],
  "homepage": "https://github.com/example/playwright-pdf-reporter#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/playwright-pdf-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/example/playwright-pdf-reporter/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "docs": "rimraf docs && typedoc",
    "prepare": "npm run build",
    "sample:ts": "cd examples/typescript && npx playwright test",
    "sample:js": "cd examples/javascript && npx playwright test"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "ejs": "^3.1.10",
    "playwright-core": "^1.57.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.57.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.4",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  }
}
